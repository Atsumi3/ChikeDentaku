<resources>    <!-- Base application theme. -->    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">        <!-- Customize your theme here. -->        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>        <item name="colorAccent">@color/colorAccent</item>        <item name="numberButtonStyle">@style/NumberButtonTheme</item>        <item name="functionButtonStyle">@style/FunctionButtonTheme</item>    </style>    <style name="CommonButtonTheme" parent="Widget.AppCompat.Button" >        <item name="android:textSize">30sp</item>        <item name="android:textColor">@color/colorAccent</item>        <item name="android:shadowColor">@color/button_background</item>        <item name="android:shadowDx">5</item>        <item name="android:shadowDy">5</item>        <item name="android:shadowRadius">10</item>        <item name="android:gravity">center</item>        <item name="android:layout_margin">@dimen/button_margin</item>    </style>    <style name="NumberButtonTheme" parent="CommonButtonTheme" >        <item name="android:background">@drawable/button_number</item>    </style>    <style name="FunctionButtonTheme" parent="CommonButtonTheme" >        <item name="android:background">@drawable/button_function</item>    </style></resources>